---
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";
---

<header class="sticky top-0 z-50 border-b border-border bg-bg/80 backdrop-blur supports-[backdrop-filter]:bg-bg/65">
  <div class="mx-auto flex max-w-5xl items-center justify-between gap-4 px-4 py-3">
    <!-- Brand -->
    <a href="/" class="group flex flex-col leading-tight">
      <span class="text-sm font-semibold text-fg group-hover:opacity-90">
        {SITE_TITLE}
      </span>
      <span class="text-xs text-muted">
        Bayesian modeling · Optimization · Product
      </span>
    </a>

    <!-- Nav -->
    <nav class="flex flex-wrap items-center justify-end gap-1">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/projects">Projects</HeaderLink>
      <HeaderLink href="/blog">Writing</HeaderLink>
      <HeaderLink href="/now">Now</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
    </nav>
  </div>
</header>

