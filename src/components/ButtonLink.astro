---
type Variant = "primary" | "secondary" | "ghost";
const { href, variant = "primary" } = Astro.props as { href: string; variant?: Variant };

const base =
  "inline-flex items-center justify-center rounded-xl px-4 py-2 text-sm font-semibold transition border";

const styles =
  variant === "primary"
    ? "bg-accent text-white border-accent/40 hover:opacity-90 shadow-soft"
    : variant === "secondary"
      ? "border-border text-fg bg-bg/40 hover:bg-panel/60"
      : "border-transparent text-muted hover:text-fg hover:bg-panel/60";
---

<a class={`${base} ${styles}`} href={href}><slot /></a>

