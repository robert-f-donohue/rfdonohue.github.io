---
import { getCollection } from "astro:content";
import BlogPost from "../../layouts/BlogPost.astro";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({ params: { slug: post.slug }, props: { post } }));
}

const { post } = Astro.props as { post: any };
const { Content } = await post.render();

const words =
  typeof post.body === "string"
    ? post.body.trim().split(/\s+/).filter(Boolean).length
    : 0;

const minutes = words ? Math.max(1, Math.round(words / 200)) : 0;
const readingTime = minutes ? `${minutes} min read` : undefined;
---

<BlogPost {...post.data} readingTime={readingTime}>
  <Content />
</BlogPost>

